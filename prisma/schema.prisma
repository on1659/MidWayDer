// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Place {
  id          String   @id @default(cuid())
  name        String
  category    String   @db.VarChar(50)
  address     String
  roadAddress String?
  phone       String?

  // WGS84 좌표 (PostGIS 대신 앱 레벨 Haversine 계산 사용)
  lat Float
  lng Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, category, address])
  @@index([category])
  @@index([lat, lng])
}
